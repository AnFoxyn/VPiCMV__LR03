<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<Design.PreviewWith>
		<Window Width="900" Height="600">
			<TabControl>
				<TabItem>
					<TabItem.Header>
						<Grid Classes="EventCategory"
							  ShowGridLines="True" ColumnDefinitions="1*, 2*" RowDefinitions="*">
							<Image Grid.Column="0"/>
							<TextBlock Grid.Column="1" Text="1afafgafaf"/>
						</Grid>
					</TabItem.Header>
				</TabItem>
			</TabControl>
		</Window>
	</Design.PreviewWith>

	<!-- ~~~WINDOW'S STYLES~~~ -->
	<Style Selector="Window">
		<Setter Property="Background" Value="#DFE4E7"></Setter>
		
		<Setter Property="FontFamily" Value="Inter"></Setter>
		<Setter	Property="FontStyle" Value="Normal"></Setter>
		<Setter Property="FontWeight" Value="Regular"></Setter>
		<Setter Property="Foreground" Value="#14181A"></Setter>

		<Setter Property="Width" Value="900"></Setter>
		<Setter Property="MinWidth" Value="900"></Setter>
		
		<Setter Property="Height" Value="600"></Setter>
		<Setter Property="MinHeight" Value="600"></Setter>
	</Style>

	<Style Selector="Grid.EventCategory Image">
		<Setter Property="Margin" Value="0, 0, 8, 0"></Setter>

		<Setter Property="Width" Value="20"></Setter>
		<Setter Property="Height" Value="20"></Setter>
	</Style>

	<Style Selector="Grid.EventCategory TextBlock">
		<Setter Property="FontSize" Value="24"></Setter>
		<Setter Property="FontWeight" Value="Medium"></Setter>
	</Style>
	
</Styles>
